@page
@model ReazorLearning.Pages.Customer.Cart.IndexModel
@{
}
<div class="container p3">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @if (TempData["Msg"] != null)
    {
        <script type="text/javascript">
            toastr.success('@TempData["Msg"]')
        </script>
    }

    <div class="row mt-3 p-1">
        <table class="table border border-1">
            <thead style="background: darkslategray">
                <tr >
                    <th colspan="2" class="text-light">Shopping Cart</th>
                    <th colspan="2" style="text-align: right">
                        <button class="btn btn-outline-primary" >Continu Selling</button>
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.ShoppingCarts)
            {
                <tr>
                    <td><img src="@item.MenuItem.Image" width="48" height="48" /></td>
                    <td>
                        @item.MenuItem.Name
                        <div>
                            <span class="badge bg-info">
                                @item.MenuItem.FoodType.Name
                            </span>
                            <span class="badge bg-warning">
                                @item.MenuItem.Category.Name
                            </span>
                        </div>
                    </td>
                    <td>
                            @item.MenuItem.Price.ToString("c0") &nbsp; X  @item.Count
                        <button class="btn btn-danger"><i class="bi bi-plus"></i></button>
                        <button class="btn btn-success"><i class="bi bi-plus"></i></button>
                    </td>
                    <td>
                        <button class="btn btn-outline-danger"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            }
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3"></td>
                <td colspan="1" class="text-info border border-1" style="text-align: right">
                    Total Price: &nbsp; @Model.TotalPrice.ToString("c0")
                </td>
            </tr>
            <tr>
                <td colspan="3"></td>
                <td colspan="1"  style="text-align: right;">
                    <button class="btn btn-success w-100">SUMMARY</button>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
</div>
