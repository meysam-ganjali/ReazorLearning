@page
@model ReazorLearning.Pages.Customer.Home.IndexModel
@{
}
<div class="row container pb-3 backgroundWhite">
    @foreach(var category in Model.Categories){
        <h4 class="text-success pl-1"><b>@category.Name</b></h4>
        <div class="col-12">
            <div class="row my-3">
                @foreach(var menuItem in Model.MenuItems.Where(u=>u.CategoryId==category.Id)){

                    <div class="col-lg-3 col-md-3 pb-4 filter" style="height: 570px;">
                        <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                            <div class="card-body pb-1 row">
                                <div class="col-8 h5">@menuItem.Name</div>
                                <div class="col-4 text-end"><span class="text-info h4">$@menuItem.Price</span></div>
                            </div>
                            <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@menuItem.Image" alt="menuitem image" style="height: 286px; max-height: 286px;">
                            <div class="card-body p-1 px-3 row">
                                <div class="col-6">
                                    <span class="badge p-2 border w-100 text-dark bg-warning ">@menuItem.Category.Name</span>
                                </div>
                                <div class="col-6 border-0">
                                    <span class="badge p-2 border w-100 bg-info ">@menuItem.FoodType.Name</span>
                                </div>
                                <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                                    <p> @Html.Raw(menuItem.Description)</p>
                                </div>
                                <div class="col-12 p-1">
                                    <a asp-page="Details" asp-route-id="@menuItem.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
    }
</div>
