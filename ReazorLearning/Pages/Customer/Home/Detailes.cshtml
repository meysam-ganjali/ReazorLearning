@page
@model ReazorLearning.Pages.Customer.Home.DetailesModel
@{
}
<div class="">
    <form method="post">
        @*<input asp-for="ShoppingCart.MenuItemId" hidden />
        <input asp-for="ShoppingCart.ApplicationUserId" hidden />*@
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.MenuItem.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted"> $@Model.MenuItem.Price</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-12">
                                        <span class="badge bg-warning p-3 h3">@Model.MenuItem.Category.Name</span>
                                        <span class="badge bg-dark p-3">@Model.MenuItem.FoodType.Name</span>
                                        <h3 class="text-success"></h3>
                                        <p class="text-secondary">@Html.Raw(Model.MenuItem.Description)</p>
                                        <div class="form-floating my-2">
                                            <input asp-for="Count" class="form-control" aria-required="true" type="number" />
                                            <label asp-for="Count"></label>
                                            <span asp-validation-for="Count" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.MenuItem.Image" width="400" height="400" class="rounded" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a class="btn btn-success btn-square form-control" asp-page="Index" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}